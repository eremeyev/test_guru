<tr>
  <td class="align-middle">
    <%= test_counter + 1 %>
  </td>
  <td class="align-middle title">
    <%= content_tag :span, test.title, class: 'test-title', data: { test_id: test.id } %>
    <%= render 'form_inline', test: test == @test ? @test : test %>
  </td>
  <td class="align-middle">
    <%= link_to test.questions.count, admin_test_questions_path(test_id: test) %>
  </td>
  <td class="align-middle">
    <%= link_to t('.show'), admin_test_path(test) %>
  </td>
  <td class="align-middle">
    <%= link_to t('.edit'), 
                edit_admin_test_path(test), 
                data: { test_id: test.id }, 
                class: 'form-inline-link' %>
  </td>
  <td class="align-middle">
    <%= button_to t('.delete'), admin_test_path(test), method: :delete, data: {confirm: "Вы уверены?"} %>
  </td>
</tr>
