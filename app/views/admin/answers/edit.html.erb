<%= content_tag :h2, t('admin.test.title', title: @question.test.title ) %>
<%= content_tag :p, t('.question_body', body: @question.body) %>
<%= form_for [:admin, @answer] do |f| %>
  <%= hidden_field_tag :question_id, @answer.question_id %><br/>
  <%= t('.body') %>: <%= f.text_field :body %><br/>
  <%= t('.is_correct') %>: <%= f.check_box :correct %>
  <br/>
  <%= f.submit %>
<% end %>